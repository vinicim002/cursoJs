// Objetivo: Criar duas Promises que dependem uma da outra. A primeira busca um nome e a segunda usa o nome para buscar uma saudaÃ§Ã£o.

// ExercÃ­cio:
function pegarNome() {
  return new Promise((resolve) => {
    setTimeout(() => resolve("Maria"), 1000);
  });
}

function saudarPessoa(nome) {
  return new Promise((resolve) => {
    setTimeout(() => resolve(`OlÃ¡, ${nome}! ðŸ˜Š`), 1000);
  });
}

// Tarefa: Pegue o nome e depois use para exibir a saudaÃ§Ã£o
pegarNome()
    .then(nome => saudarPessoa(nome))
    .then(result => console.log(result));



