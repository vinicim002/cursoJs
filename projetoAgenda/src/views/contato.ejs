<%- include("includes/head") %> 
<%- include("includes/nav") %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 mt-3">
      <h1 class="text-center">Contato</h1>
      <p class="text-center lead">Crie ou edite seu contato abaixo.</p>

      <%- include('includes/messages') %>

      <form
        action="/contato/register"
        method="POST"
        class="d-flex flex-column justify-content-center mt-5"
      >
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">

        <div class="mb-3 d-flex flex-column justify-content-start align-items-start">
          <label class="form-label text-left">Nome</label>
          <input type="text" class="form-control" name="nome">
        </div>

        <div class="mb-3 d-flex flex-column justify-content-start align-items-start">
          <label class="form-label text-left">Sobrenome</label>
          <input type="text" class="form-control" name="sobrenome">
        </div>

        <div class="mb-3 d-flex flex-column justify-content-start align-items-start">
          <label class="form-label text-left">E-mail</label>
          <input type="email" class="form-control" name="email">
        </div>

        <div class="mb-3 d-flex flex-column justify-content-start align-items-start">
          <label class="form-label text-left">Telefone</label>
          <input type="tel" class="form-control" name="telefone">
        </div>

        <button type="submit" class="btn btn-primary">Salvar</button>
      </form>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include("includes/footer") %>
